{
  "name": "wasm-synth",
  "version": "0.0.1",
  "description": "A synthesizer built from scratch in C++ and made available on the web through WebAssembly.",
  "scripts": {
    "copy:worklets": "mkdir -p public/worklets && cp src/js/worklets/synth.js public/worklets/synth.js",
    "build:cpp": "./scripts/build.sh",
    "build:js": "rollup -c",
    "build": "npm run build:cpp && npm run build:js",
    "watch:js": "rollup -c -w",
    "watch:cpp": "npm run build:cpp && npm-watch",
    "watch": "npm-run-all --parallel watch:js watch:cpp",
    "dev": "npm-run-all --parallel serve watch",
    "serve": "serve public"
  },
  "watch": {
    "build:cpp": {
      "patterns": [
        "src/cpp"
      ],
      "extensions": "cc,h"
    },
    "copy:worklets": {
      "patterns": [
        "src/js/worklets"
      ],
      "extensions": "js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rollup": "^1.16.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-worker": "git+https://github.com/johanholmerin/rollup-plugin-worker.git#semver:^2.0.0",
    "serve": "^11.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimDaub/wasm-synth.git"
  },
  "keywords": [
    "synthesizer",
    "wasm",
    "javascript",
    "music"
  ],
  "author": "Tim Daubenschuetz <tim.daubenschuetz@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TimDaub/wasm-synth/issues"
  },
  "homepage": "https://github.com/TimDaub/wasm-synth#readme",
  "dependencies": {
    "dygraphs": "^2.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-envelope-graph": "0.0.2",
    "react-piano": "^3.1.3"
  }
}
